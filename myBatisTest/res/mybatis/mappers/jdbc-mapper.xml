<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="jdbcLprod">
	<insert id="insertLprod" parameterType="lprodVo">
		insert into lprod(lprod_id, lprod_gu, lprod_nm)
		values(${lprod_id), ${lprod_gu}, ${lprod_nm})
	</insert>
	
	<select id="searchGu" parameterType="String" resultType="">
		select * from lprod where lprod_gu = ${lprod_gu}
	</select>
	
	<select id="searchId" parameterType="int">
		select max(lprod_id)+1 from lprod
	</select>

</mapper>